#!/bin/sh
# Pre-commit hook: Run cargo fmt and cargo clippy before each commit.
# If either check fails, the commit is aborted.

set -e

echo "ğŸ” Running cargo fmt --check..."
cargo fmt --all -- --check
if [ $? -ne 0 ]; then
    echo "âŒ cargo fmt failed. Run 'cargo fmt --all' to fix."
    exit 1
fi

echo "ğŸ” Running cargo clippy..."
cargo clippy --all-targets -- -D warnings
if [ $? -ne 0 ]; then
    echo "âŒ cargo clippy failed. Fix the warnings above."
    exit 1
fi

echo "âœ… Pre-commit checks passed."
